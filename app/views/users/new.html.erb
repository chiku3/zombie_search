<h1>ユーザー登録</h1>

 <%= form_with model: @user, url: sign_up_path, local: true do |f| %>
    <% if @user.errors.any? %>
      <strong><%= @user.errors.count %>個のエラーがあります。</strong>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
      
    <div>
    <%= f.label :name, 'ニックネーム' %>
    <%= f.text_field :name %>
    </div>
    
    <div>
    <%= f.label :email, 'メールアドレス' %>
    <%= f.email_field :email %>
    </div>
    
    <div>
    <%= f.label :password, 'パスワード（６文字以上）' %>
    <%= f.password_field :password %>
    </div>
    
    <div>
    <%= f.label :password_confirmation, 'パスワード(確認)' %>
    <%= f.password_field :password_confirmation %>
    </div>
    
    <div>
    <%= f.submit '登録' %>
    </div>
    
<% end %>