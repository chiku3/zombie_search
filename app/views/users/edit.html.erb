<h1>ユーザー情報編集</h1>

 <div>
    <%= form_with model: current_user, url: users_path, local: true do |f| %>
      <div>
        <%= f.label :name, "ニックネーム" %>
        <%= f.text_field :name %>
      </div>

      <div>
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email %>
      </div>


      <%= f.submit "この内容で保存する" %>
    <% end %>
  </div>