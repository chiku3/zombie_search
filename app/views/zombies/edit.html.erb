<h1>ゾンビ編集</h1>

 <div>
    <%= form_with model: @zombie, url: zombie_path(@zombie), local:true do |f| %>
      <%= f.label :name, "タイトル" %>
      <%= f.text_field :name, size: 30 %>
      
      <%= f.label :body, "内容説明" %>
      <%= f.text_area :body %>
      
      <%= f.label :image, "画像" %>
      <%= f.attachment_field :image %>
   
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        <%= tag.label class: 'form-check-label' do %>
          <%= tag.check_box class: 'form-check-input' %>
          <%= tag.text %>
        <% end %>
      <% end %>

      <%= f.submit "この内容で保存する" %>
    <% end %>
  </div>